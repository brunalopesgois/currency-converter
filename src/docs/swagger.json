{
  "openapi": "3.0.3",
  "info": {
    "title": "Converter API",
    "contact": {
      "email": "bruna-chan@live.com"
    },
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Currency Converter",
      "description": "Get results of a conversion of a value."
    },
    {
      "name": "Currency Register",
      "description": "Add currencies for conversion."
    }
  ],
  "paths": {
    "/currencies/conversion": {
      "get": {
        "tags": ["Currency Converter"],
        "summary": "Find result of conversion",
        "description": "Return conversion result",
        "operationId": "convertCurrency",
        "parameters": [
          {
            "in": "query",
            "name": "code",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Currency code",
            "example": "BRL"
          },
          {
            "in": "query",
            "name": "value",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Value of the product",
            "example": 529
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConvertedCurrencies"
                }
              }
            }
          },
          "400": {
            "description": "Invalid Currency Code"
          }
        }
      }
    },
    "/currencies": {
      "post": {
        "tags": ["Currency Register"],
        "summary": "Add a new currency",
        "description": "Add a new currency to conversion calculation",
        "operationId": "addCurrency",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Currency"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Currency"
                }
              }
            }
          },
          "400": {
            "description": "Currency Already Exists"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Currency": {
        "required": ["code"],
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "USD"
          }
        }
      },
      "ConvertedCurrencies": {
        "required": ["code", "value"],
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "value": {
            "type": "number"
          }
        },
        "example": [
          {
            "code": "USD",
            "value": 98.23
          },
          {
            "code": "EUR",
            "value": 83.26
          },
          {
            "code": "INR",
            "value": 7318.93
          }
        ]
      }
    },
    "requestBodies": {
      "ConvertedCurrencies": {
        "description": "Object that contains values converted according to registered currencies",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/ConvertedCurrencies"
              }
            }
          }
        }
      }
    }
  }
}
